.login
  %h2 HomeLife
  %h4 Edit Account
  = link_to "トップページに戻る", :back, class: 'btn'
  .login-form
    = form_for(current_user) do |f|
      .field
        .field-label
          = f.label :name
        .field-input
          = f.text_field :name, autofocus: true
      .field
        .field-label
          = f.label :email
        .field-input
          = f.email_field :email
      .actions
        = f.submit "Update", class: 'btn'
